# Football Prediction API - Environment Variables

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Football Prediction API
VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=true

# Database Configuration
DATABASE_URL=sqlite:///./football_predictor.db

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook
TELEGRAM_WEBHOOK_PORT=8002

# External APIs
FOOTBALL_DATA_API_KEY=your-football-data-api-key
FOOTBALL_DATA_BASE_URL=https://api.football-data.org/v4

API_SPORTS_KEY=your-api-sports-key
API_SPORTS_BASE_URL=https://v3.football.api-sports.io

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Prediction Engine
PREDICTION_CONFIDENCE_THRESHOLD=0.6
MAX_PREDICTIONS_PER_USER=100

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60